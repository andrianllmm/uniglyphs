    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "textarea-caret": "^3.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
