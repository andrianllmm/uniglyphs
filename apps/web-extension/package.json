{
  "name": "UniGlyphs",
  "description": "UniGlyphs lets you style text on any website using a dynamic toolbar.",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
